<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirspaceUsage.Settings"
             xmlns:Events="clr-namespace:AirspaceUsage.Events" x:Class="AirspaceUsage.Settings.EventSettings"
             mc:Ignorable="d">
    <DockPanel HorizontalAlignment="Center" VerticalAlignment="Top">
        <Button Style="{Binding Source={StaticResource LabelButton}}" Content="Save Changes" 
                Margin="10" DockPanel.Dock="Bottom" HorizontalAlignment="Center"
                Click="SaveChanges"/>
        <Grid>
            <ListView Name="eventsListBox" Background="{x:Null}" Margin="5"
                      VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
            <Border BorderBrush="White" BorderThickness="3"/>
        </Grid>
    </DockPanel>
</UserControl>
